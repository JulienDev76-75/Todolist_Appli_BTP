{% extends 'base.html.twig' %}

{% block title %}ToDoList - BTP{% endblock %}

{% block body %}
     <h1 class="text-center mb-3">Votre Projet :</h1>
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="card col-3 my-3 mx-5 ">
                <div class="card-header">
                    <h5 class="card-title">{{project.ProjectName}}</h5>
                </div>

                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        
                        <li class="list-group-item">Description du Projet : {{project.ProjetDescription}}</li>
                    </ul>
                    <hr>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Date de création : {{project.ProjetCreation | date('d/m/Y')}}</li>
                        <li class="list-group-item">Deadline :{{project.ProjetDeadline | date('d/m/Y')}}</li>
                    </ul>
                    <div class="card-footer text-center">
                       <a href="{{ path('newTask', {id: project.id}) }}" class="card-link btn btn-dark">ajouter tâche</a>
                        <a href="{{ path('projectAndTask', {id: project.id}) }}" class="card-link btn btn-dark">projectAndTask</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
