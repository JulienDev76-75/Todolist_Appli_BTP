{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-5 text-center">Inscrivez-vous sur notre plateforme :</h1>

<div class="container my-5 bg-light border border-danger p-5">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
    {{ form_end(registrationForm) }}
            <button type="submit" class="btn btn-danger text-white mt-2 mb-5">Valider</button>
</div>
{% endblock %}
